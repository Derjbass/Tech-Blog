{{#if allUsers}}
    {{#if user}}
        {{#each allUsers as | user |}}
            {{#each this.blogs}}
                <div class="containerLoggedIn">
                    <h3 class="title">{{this.title}}
                        <h6>posted by {{user.username}} on {{this.createdAt}}</h6>
                    </h3>
                            <h4 class="content">{{this.content}}</h4>
                </div>
            {{/each}}
        {{/each}}
    {{else}}
        {{#each allUsers as | user |}}
            {{#each this.blogs}}
                <div class="container">
                    <h3 class="title">{{this.title}}
                        <h6>posted by {{user.username}} on {{this.createdAt}}</h6>
                    </h3>
                            <h4 class="content">{{this.content}}</h4>
                    
                </div>
            {{/each}}
        {{/each}}
    {{/if}}
{{/if}}




